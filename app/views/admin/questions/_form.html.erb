<h4><%= question_header(@question) %></h4>

<%= form_with(model: [:admin, @test, @question], local: true)  do |form| %>
  <%= render 'shared/errors', resource: @question%>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p><br>

  <p><%= form.submit %></p>
<% end %>  

<%= link_to t('back_link'), admin_test_path(@question.test) %>
