<div class="row justify-content-center mt-3">
  <div class="col col-md-12">
    <h2> <%= t('.header')%> </h2>

    <p>
      <%= link_to t('.create'), new_admin_test_path %>
    </p>

    <table class="table table-striped">
      <thead>
        <tr class="table-primary">
          <th class="sort-by-title pointer">
            <%= t('title_test') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('level_test')%></th>
          <th><%= t('questions_test')%></th>
          <th colspan="3"><%= t('actions_test')%></th>
      </tr>  
    <%= render @tests %>
